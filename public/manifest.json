{
  "manifest_version": 3,
  "name": "Canvas Archiver Extension",
  "version": "1.0.0",
  "description": "Archive files in your canvas courses!",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Canvas Archiver Extension",
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "host_permissions": [
    "*://canvas.*/*",
    "*://*.instructure.com/*"
  ],
  "permissions": ["downloads", "declarativeContent", "tabs", "activeTab"]
}
